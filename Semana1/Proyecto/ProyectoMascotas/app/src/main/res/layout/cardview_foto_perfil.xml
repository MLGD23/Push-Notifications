<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotaFavorito"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/gatoa"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvCantFotoPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cant_likes"
                android:textStyle="bold"
                android:textSize="@dimen/likes_mascota"
                android:paddingRight="7dp"
                />
            <ImageView
                android:id="@+id/imgLikesFavCv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/huesolike"
                />
        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>
